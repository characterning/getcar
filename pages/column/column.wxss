/* pages/column/column.wxss */
.car-cont {
     background-size: cover;
     background-repeat: no-repeat;
}
.cont-list{
     padding: 0rpx 20rpx;
}
.car-cont .top {
     position: relative;
     color: #fff;
     overflow: hidden;
     border-radius: 10rpx;
}

.car-cont .top .text {
     display: block;
     width: 100%;
     height: 70rpx;
     font-size: 32rpx;
     padding-left: 20rpx;
     position: absolute;
     bottom: 0;
     left: 0;
     right: 0;
     z-index: 111;
     -webkit-line-clamp: 2;
}

.shade-mask {
     background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.3) 40%, transparent);
}

.car-cont .cont-list .top image {
     display: block;
     width: 100%;
     height: 300rpx;
     vertical-align: top;
     object-fit: cover;
}
.car-cont .item {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
    color: #000;
    border-bottom: 1px solid #eee; 
}
.car-cont .item .text {
    display: block;
    padding-right: 10rpx;
    width:450rpx;
    font-size: 36rpx;
    letter-spacing: 3rpx;
}
.textspan{
     display: block;
     color: #999;
     font-size: 24rpx;
     margin-top: 30rpx;
}
.car-cont .item image {
     display: block;
    width: 180rpx;
    height: 180rpx;
    object-fit: cover; 
    border-radius: 5px;
    flex-grow: 1;
    background-size: cover; 
}
.loading {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}