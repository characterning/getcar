/* pages/details/details.wxss */
@import "/wxParse/wxParse.wxss";

.detail-wrap, .unfold-wrap, .user-name-sign {
     position: relative;
}

.detail-wrapper .name-info {
     font-size: 26rpx;
     color: #999;
     margin: 0 25rpx 25rpx;
     line-height: 20px;
}

.detail-wrapper .name-info image {
     display: inline-block;
     width: 30rpx;
     height: 30rpx;
     vertical-align: middle;
     margin-right: 10rpx;
}

.detail-wrapper .title {
     display: block;
     font-size: 40rpx;
     line-height: 64rpx;
     margin: 0 25rpx;
     padding-left: 0;
     padding-right: 0;
     font-weight: 600;
     text-align: left;
     color: #292929;
}

#articleCont {
     padding: 25rpx 30rpx;
}

.wxParse-p {
     font-size: 32rpx;
     line-height: 1.6;
     margin: 10rpx 0rpx;
     letter-spacing: 3rpx;
}

.WxEmojiView wxParse-inline {
     font-size: 32rpx;
     line-height: 1.6;
     margin: 10rpx 0rpx;
     letter-spacing: 3rpx;
     color: #333;
}

.car-tag {
     background-color: #fff;
     padding: 0 30rpx 30rpx;
     font-size: 0;
}

.car-tag navigator, .car-tag navigator:nth-of-type(1) {
     background-color: #ffdcdc;
}

.car-tag navigator {
     display: inline-block;
     color: #333;
     padding: 15rpx 30rpx;
     border-radius: 35rpx;
     font-size: 24rpx;
     margin: 0 20rpx 20rpx 0;
}

.container {
     padding-left: 14px;
     padding-right: 14px;
     background: #fff;
}

.line {
     border-bottom: 1px solid #e5e8e9;
}

.more-article .title {
     display: inline-block;
     padding: 20rpx 0;
     color: #292929;
     font-size: 32rpx;
     font-weight: bold;
     border-bottom: 4rpx solid #fc843b;
}

.more-article .card-list navigator {
     padding: 20rpx 0;
     width: 100%;
     border-bottom: 1px solid #e5e8e9;
}
.more-article .card-list .h1 {
     display: block;
    font-size: 34rpx;
    color: #333;
    line-height: 50rpx;
    margin-bottom: 10rpx;
    -webkit-line-clamp: 2;
}
.more-article .card-list .list-img {
    font-size: 0;
    margin-bottom: 10rpx;
}
.ft {
    display: flex;
    -webkit-box-pack: justify;
    box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.more-article .card-list .list-img image {
    width: 225rpx;
    height: 165rpx;
    object-fit: cover;
    margin-right: 6rpx;
}
.card-list .info{
    font-size:24rpx;
    color: #999;
    margin-right:10rpx;
    vertical-align: text-bottom;
}
.loading {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}